<html>
    <head>
        <title>Žaidimų portalas</title>
        <meta charset="utf-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="assets/css/styles.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </head>
<body>
    <div class="container">
        <form method="post" action="/addFavoriteGame" class="row">
            <h1 class="text-light border-bottom border-secondary p-2">Naujo žaidimo pridėjimas</h1>

            <div class="col-6 p-2">
                <label for="genre">Žaidimo žanras: *</label>
                <select name="groupName" class="form-control bg-dark text-light" required>

                    <option value="">Pasirinkite grupe...</option>

                    <% for (var i = 0; i < names.length; i++){ %>
                    <option value="<%=names[i]["Pavadinimas"]%>"><%=  names[i]["Pavadinimas"] %></option>

                        <% } %> 
                </select>
            </div>

            <button name="data", value="<%= gameId %>|<%=userId %>">Pridėti</button>

        </form>


            <div class="col-6 p-2">

                <form action="/addFavoriteGameToNewGroup" method="post">
                <label for="newGroup">Nauja grupė</label>
                <input name="newGroup" class="form-control bg-dark text-light" type="text">
                <button value="<%= gameId %>|<%= userId %> " name="data">Sukurti</button>
                
            </form>
            </div>



    </div>
</body>
</html>