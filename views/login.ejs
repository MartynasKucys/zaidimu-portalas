<html>
    <head>
        <title>Žaidimų portalas</title>
        <meta charset="utf-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="assets/css/styles.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </head>
<body>
    <div class="container">
        <h1 class="text-light border-bottom border-secondary p-2">Prisijungimas</h1>
        <form class="row" method="post" action="/login">
            <div class="col-12">
                <div class="col-12 p-2">
                    <label class="text-danger"><%= err_msg %></label>
                </div>
            </div>
            <div class="col-6 p-2">
                <label for="name">Naudotojo vardas:</label>
                <input name="name" type="text" class="form-control bg-dark text-light">
            </div>
            <div class="col-6 p-2">
                <label for="password">Naudotojo slaptažodis:</label>
                <input name="password" type="password" class="form-control bg-dark text-light">
            </div>
            <% if(code == '0')  { %>
                <div class="col-6 p-2">
                    <label for="code">Prisijungimo kodas:</label>
                    <input name="code" type="text" class="form-control bg-dark text-light">
                </div>
            <% } %>
            <div class="col-12 p-2 d-flex justify-content-end">
                <button class="btn btn-primary bg-dark border-secondary">Prisijungti</button>
            </div>
        </form>
    </div>
</body>
</html>