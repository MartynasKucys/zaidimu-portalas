<html>
    <head>
        <title>Žaidimų portalas</title>
        <meta charset="utf-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="assets/css/styles.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </head>
<body>
    <div class="container">
        <form method="post" action="/register" class="row">
            <h1 class="text-light border-bottom border-secondary p-2">Registracija</h1>
            <div class="col-6 p-2">
                <label for="name">Naudotojo vardas: *</label>
                <input name="name" type="text" class="form-control bg-dark text-light">
            </div>
            <div class="col-6 p-2">
                <label for="password">Naudotojo slaptažodis: *</label>
                <input name="password" type="password" class="form-control bg-dark text-light">
            </div>
            <div class="col-6 p-2">
                <label for="email">Naudotojo el. paštas: *</label>
                <input name="email" type="email" class="form-control bg-dark text-light">
            </div>
            <div class="col-6 p-2">
                <label for="language">Naudotojo kalba:</label>
                <input name="language" type="text" class="form-control bg-dark text-light">
            </div>
            <div class="col-6 p-2">
                <label for="height">Naudotojo ūgis (metrais):</label>
                <input name="height" type="text" class="form-control bg-dark text-light">
            </div>
            <div class="col-6 p-2">
                <label for="width">Naudotojo svoris (kilogramais):</label>
                <input name="width" type="text" class="form-control bg-dark text-light">
            </div>
            <div class="col-6 p-2">
                <label for="hair_col">Naudotojo plaukų spalva:</label>
                <input name="hair_col" type="text" class="form-control bg-dark text-light">
            </div>
            <div class="col-6 p-2">
                <label for="eye_col">Naudotojo akių spalva:</label>
                <select name="eye_col" class="form-control bg-dark text-light">
                    <option value="">Pasirinkite akių spalvą...</option>
                    <option value>Žalia</option>
                    <option>Ruda</option>
                    <option>Mėlyna</option>
                </select>
            </div>
            <div class="col-6 p-2">
                <label for="gender">Naudotojo lytis:*</label>
                <select name="gender" class="form-control bg-dark text-light">
                    <option value="">Pasirinkite lytį..</option>
                    <option value="1">Vyras</option>
                    <option value="2">Moteris</option>
                    <option value="3">Kita</option>
                </select>
            </div>
            <div class="col-6 p-2">
                <label for="short_desc">Trumpas aprašymas:</label>
                <input name="short_desc" type="text" class="form-control bg-dark text-light">
            </div>
            <div class="col-6 p-2">
                <label for="country">Salis:</label>
                <input name="country" type="text" class="form-control bg-dark text-light">
            </div>
            <div class="col-12 p-2">
                <label for="desc">Naudotojo aprašymas:</label>
                <textarea name="desc" class="form-control bg-dark text-light"></textarea>
            </div>
            <div class="col-12 p-2 d-flex justify-content-end">
                <button class="btn btn-primary bg-dark border-secondary" onclick="alert('Sekmingai užsiregstravote');">Užsiregistruoti</button>
            </div>
        </form>
    </div>
</body>
</html>