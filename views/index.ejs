<html>
    <head>
        <title>Žaidimų portalas</title>
        <meta charset="utf-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="assets/css/styles.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </head>
<body>
    <div class="container">
		<div class="row col-12 bg-dark p-0 m-0">
				<div class="col-6 d-flex align-items-center bg-dark p-2">
					<h2 class="text-light p-2">Žaidimų portalas </h2>
				</div>  
                <% if(id) { %>
                    <div class="col-2 p-2 bg-dark d-flex align-items-center justify-content-center">
                        <a class="text-light p-2" href="profile?id=<%= id %>">
                            Profilis
                        </a>
                    </div>
                <% } else { %>
                    <div class="col-2 p-2 bg-dark d-flex align-items-center justify-content-center">
                        <a class="text-light p-2" href="/login">
                            Prisijungimas
                        </a>
                    </div>
                    <div class="col-2 p-2 bg-dark d-flex align-items-center justify-content-center">
                        <a class="text-light p-2" href="/register">
                            Registracija
                        </a>
                    </div>
                <% } %>

                <% if(id) { %>
                    <div class="row">
                        <div class="col-8 d-flex justify-content-center"></div>
                        <div class="col-4 d-flex align-items-right justify-content-center fw-bold">
                            <a class="text-light pt-4" href="/game_create">
                                Pridėti žaidimą...
                            </a>
                        </div>
                    </div>
                <% } %>
		</div>

        <% Games.forEach(i => {%>
            <div class="col-12 border-top p-2 border-bottom border-secondary mt-5 ">
                <h2 class="text-light p-2 "><a href="/game?id=<%= i.id %>" class="text-decoration-underline text-light"><%= i.name %></a></h1>
                    <div class="row p-2">
                        <img class="col-2 p-2" src="data:image/*;base64, <%= i.image %>" alt="DB Image"/>
                        <div class="col-9 p-2"><p><%= i.shortdesc %></p></div>
                    </div>
            </div>
        <% }) %>
    </div>
</body>
</html>